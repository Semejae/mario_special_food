<h1>Add a new review: <%= @product.name %></h1>

<% if @review.errors.any? %>
  <h3>fix errors:</h3>
  <ul>
    <@review.errors.full_messages.each do |message| %>
      <li><%= message %></li>
  </ul>
<% end %>

<%= form_for [@product, @review] do |f| %>
  <%= f.label :author %>
  <%= f.text_field :author %>
  <%= f.label :content_body %>
  <%= f.text_field :content_body %>
  <%= f.label :rating %>
  <%= f.number_field :rating, min: 1, max: 5 %>
  <p><%= f.submit %></p>
<% end %>